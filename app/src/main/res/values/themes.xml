<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main App Theme -->
    <style name="Theme.NeoBuk" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Splash Screen Theme - Light Mode -->
    <style name="Theme.NeoBuk.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/neobuk_teal</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon3</item>
        <item name="postSplashScreenTheme">@style/Theme.NeoBuk</item>
    </style>
</resources>


